<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.f"
          controllerName="sap.ui.application.system.controller.Detail" displayBlock="true">

    <Page
            title="Page"
            class="sapUiContentPadding" >
        <customHeader>
            <Toolbar>
                <Button type="Back"/>
                <ToolbarSpacer/>
                <Title text="title" level="H2"/>
                <ToolbarSpacer/>
                <Button icon="sap-icon://edit" type="Transparent" ariaLabelledBy="editButtonLabel"/>
            </Toolbar>

        </customHeader>
        <content>
            <HBox>
                <Text text="area" />
            </HBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button type="Emphasized" text="Emphasized"/>
                <Button text="Default" />
                <Button icon="sap-icon://action" type="Transparent"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
